{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": false,
    "jsx": "react-native",
    "noEmit": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": ["jest", "react-native"],
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": [
    "App.tsx",
    "**/*.tsx",
    "api/**/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
